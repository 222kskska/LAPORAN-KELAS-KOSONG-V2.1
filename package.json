{
  "name": "siswa-connect",
  "private": true,
  "version": "3.0.0",
  "type": "module",
  "main": "dist-electron/main-hybrid.js",
  "author": "ArifWbo",
  "description": "Aplikasi Pelaporan KBM SiswaConnect Multi-User - Port 1991",
  "scripts": {
    "dev": "vite --port 1991",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview --port 1991",
    "dev:electron": "concurrently -k \"npm run dev\" \"npm run electron:start\"",
    "electron:start": "wait-on tcp:1991 && electron .",
    "build:electron": "tsc -b && vite build && tsc -p electron/tsconfig.json && electron-builder",
    "start:server": "node server.js",
    "install:all": "npm install && cd server && npm install",
    "dev:server": "cd server && npm run dev",
    "build:server": "cd server && npm run build",
    "start:backend": "cd server && npm start",
    "build:all": "npm run build && npm run build:server",
    "dist": "electron-builder"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "express": "^4.18.2",
    "lucide-react": "^0.344.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "recharts": "^2.12.0",
    "xlsx": "^0.18.5",
    "better-sqlite3": "^9.2.2",
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.24",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@types/better-sqlite3": "^7.6.8",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.18",
    "concurrently": "^8.2.2",
    "electron": "^29.1.0",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.2.2",
    "vite": "^5.2.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "id.sch.siswaconnect",
    "productName": "SiswaConnect",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "server/dist/**/*",
      "database/**/*",
      "electron/setup-wizard.html"
    ],
    "asarUnpack": [
      "dist/**/*",
      "server/dist/**/*",
      "database/**/*"
    ],
    "extraResources": [
      {
        "from": "dist",
        "to": "dist"
      },
      {
        "from": "server/dist",
        "to": "server/dist"
      },
      {
        "from": "database",
        "to": "database"
      },
      {
        "from": "node_modules/better-sqlite3",
        "to": "node_modules/better-sqlite3",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "SiswaConnect",
      "runAfterFinish": true,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico"
    }
  }
}
